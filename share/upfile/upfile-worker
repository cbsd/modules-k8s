bhyve_%%JNAME%%()
{
	vm_ram="%%WORKER_VM_RAM%%"
	vm_cpus="%%WORKER_VM_CPUS%%"
	imgsize="%%WORKER_VM_IMGSIZE%%"
	ip4_addr=$( dhcpd ip4pool="${INIT_NODES_IPS}" )
	[ -z "${ip4_addr}" ] && err 1 "${W1_COLOR}${CBSD_APP} error: ${N1_COLOR}no free IP for %%JNAME%%, pool ended or address conflict?: ${N2_COLOR}${INIT_MASTERS_IPS}${N0_COLOR}"
	fqdn="%%WORKER_NAME%%.%%CLUSTER%%"
	ci_jname="${jname}"
	ci_fqdn="${fqdn}"
	ci_ip4_addr="${ip4_addr}"
	interface="%%WORKER_INTERFACE%%"
}
postcreate_%%JNAME%%()
{
	rm -f /tmp/prepare_master-${jname}.log
	bscp %%KEYFILE_PUB%% ${jname}:authorized_keys
	bscp %%KEYFILE%% ${jname}:id_ed25519
	bscp bootstrap.config ${jname}:bootstrap.config

	if [ "${DEVELOP}" = "1" ]; then
		# development only

		# development only

		bscp /root/modules-k8s/kubernetes.tgz ${jname}:kubernetes.tgz
		bscp /root/modules-k8s/puppet.tgz ${jname}:puppet.tgz

		bexec jname=${jname} sudo "[ -d /home/ubuntu/kubernetes ] && rm -rf /home/ubuntu/kubernetes" || true
		bexec jname=${jname} sudo "[ -d /home/ubuntu/puppet ] && rm -rf /home/ubuntu/puppet" || true
		bexec jname=${jname} sudo "tar xfzv kubernetes.tgz"
		bexec jname=${jname} sudo "tar xfzv puppet.tgz"
		bexec jname=${jname} sudo "mkdir -p /etc/puppetlabs/puppet" || true
		bexec jname=${jname} sudo rsync -avz /home/ubuntu/puppet/ /etc/puppetlabs/puppet/
	fi

	bexec jname=${jname} sudo /home/ubuntu/kubernetes/prepare_master.sh worker | tee -a /tmp/prepare_master-${jname}.log
}
